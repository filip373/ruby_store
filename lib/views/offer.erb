<% if products.empty? %>
  <h1>No products currently in offer</h1>
<% else %>
  <h1>Products in offer</h1>
  <ul class="list-group">
    <% products.each do |product, quantity| %>
      <li class="list-group-item">
        <a href="/product/<%= product.id %>">
          <%= product.name %>
        </a>
        <a class="add-link" href="/add/<%= product.id %>">
          <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
          Add to basket
        </a>
        <span class="badge"><%= quantity %> left</span>
      </li>
    <% end %>
  </ul>
<% end %>
