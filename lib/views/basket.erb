<% if products.empty? %>
  <h1>Your basket is empty</h1>
<% else %>
  <h1>Products in basket</h1>
  <ul class="list-group">
    <% products.each do |product, quantity| %>
      <li class="list-group-item">
        <span> <%= quantity %> x </span>
        <a href="/product/<%= product.id %>">
          <%= product.name %>
        </a>
        <form action="/remove/<%= product.id %>" method="post" class="floating-form">
          <button type="submit" class="form-button">
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>Remove
          </button>
        </form>
        <span class="label label-default product-price">
          $<%= (quantity * product.price_with_vat).to_s.insert(-3, '.') %></span>
      </li>
    <% end %>
  </ul>
  <p>Total: <span class="label label-default">
    $ <%= total.to_s.insert(-3, '.') %></span>
  </p>
  <p>Total with VAT: <span class="label label-default">
    $ <%= total_with_vat.to_s.insert(-3, '.') %></span>
  </p>
<% end %>
